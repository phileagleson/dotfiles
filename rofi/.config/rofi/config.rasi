    modi: "drun,window,emoji,websearch:~/.config/rofi/scripts/websearch,run,calc";
    icon-theme: "Oranchelo";
    show-icons: true;
    terminal: "kitty";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-drun: " ï”—  Apps:";
